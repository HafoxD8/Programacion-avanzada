int main() {
    float R1, R2, RT;

    cout << "Valor de R1: ";
    cin >> R1;

    cout << "Valor de R2: ";
    cin >> R2;

    // Validación de datos según la lógica del script original
    if ((R1 + R2) <= 0 || R1 < 0 || R2 < 0) {
        cout << "Error: los valores deben ser positivos" << endl;
    } else {
        // Cálculo de resistencia en paralelo: (R1 * R2) / (R1 + R2)
        RT = (R1 * R2) / (R1 + R2);
        cout << "La resistencia total es: " << RT << endl;
    }

    return 0;
}
